{
  "name": "grub-theme-lsp",
  "description": "REPLACE_ME",
  "author": "REPLACE_ME",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "REPLACE_ME",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:grub-theme"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "grub-theme",
        "aliases": [
          "GRUB Theme",
          "grub"
        ],
        "filenames": [
          "theme.txt"
        ],
        "configuration": "./client/language-configuration.json"
      }
    ],
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w --force",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "typescript": "^5.9.3"
  }
}
